.repositories
  .row.repositories--header
    .col-md-10
      %h4 Your Projects
    .col-md-2.actions
      = link_to [:choose_account, :repositories] do
        = octicon('plus')
        Add new project

  .panel.panel-default
    - if @repositories.any?
      = render 'repositories'
    - else
      .panel-body
        %strong Hi!
        You should probably
        = link_to 'add', [:choose_account, :repositories], class: 'alert-link'
        a new repository that should be inspected.
